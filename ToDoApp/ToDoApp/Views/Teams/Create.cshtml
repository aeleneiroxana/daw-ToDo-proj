@model ToDoApp.Models.Team

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @*<h4>Team</h4>*@
    <br>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group" style="text-align:left; width:270px;">
        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2", Style = "color: white;" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control"} })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>
    </div>

    @Html.Hidden("UserId", Model.UserId)

    @Html.Hidden("LastUpdate", Model.LastUpdate)

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10" style="text-align:left; margin-left:0px;">
            <input type="submit" style="width:241px; font-weight:600; margin-bottom:20px;" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to teams", "Index",null,new { @class = "backLink" })
</div>

<style>
    html, body {
        overflow-x: hidden;
    }

    h1, h2, h3, h4, h5, h6, p {
        color: white;
    }

    .anotheruser {
        color: white;
    }

        .anotheruser:hover {
            color: #7792bf;
        }

    .backLink{
            background-color: #4CAF50;
            color: black;
            font-weight: 600;
            border-radius: 5px;
            padding-bottom: 3px;
            padding-top: 3px;
            padding-left: 3px;
            padding-right: 3px;
        }

        .backLink:hover{
            background-color: #4CAF50;
            color: #474747;
            text-decoration: none;
            border-radius: 5px;
            padding-bottom: 3px;
            padding-top: 3px;
            padding-left: 3px;
            padding-right: 3px;
        }

</style>