@model ToDoApp.Models.Comment

@using (Html.BeginForm("Create", "Comments"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Add Comment</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group" style="text-align: left; width:550px;">
        @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-2", Style = "color: white; text-align: left;" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Content, htmlAttributes: new { @class = "form-control" , Style= "width: 500px;"})
            @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
        </div>
    </div>

        @Html.HiddenFor(model => model.TaskId)
        @Html.HiddenFor(model => model.UserId)

        <div class="form-group">
            <div class="col-md-offset-0 col-md-10">
                <input type="submit" value="Add" class="btn btn-default" style="width:70px; background-color: #4CAF50; color: black; border: none; font-weight:600; margin-bottom:20px;" />
            </div>
        </div>
    </div>
}

