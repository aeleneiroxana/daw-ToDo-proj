@model ToDoApp.Models.Project

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Project</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" style="text-align: left; width:550px;">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2", Style = "color: white; text-align:left;" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="text-align:left; width:550px;">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2", Style = "color: white; text-align:left;" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />

        @Html.HiddenFor(model => model.LastUpdate)

        <div class="form-group" style="">

            <div class="col-md-offset-0 col-md-1" style="text-align:left;">
                <input type="submit" style="width:100px; background-color: #4CAF50; color: black; border: none; font-weight:600; margin-bottom:20px;" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
