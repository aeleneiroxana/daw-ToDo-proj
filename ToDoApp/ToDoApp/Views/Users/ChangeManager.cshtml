@model ToDoApp.Models.TeamsNewManager

@{
    ViewBag.Title = "ChangeManager";
}

<h2>Change Manager</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group" style="text-align:left; width:1100px;">

        @Html.HiddenFor(model => model.formerManagerId)

        @Html.Label("Select new manager", htmlAttributes: new { @class = "control-label col-md-2", Style = "color: white; text-align: left;" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => Model.newManagerId, new SelectList(ViewBag.AllUsers, "Value", "Text"), "Select team manager", new { @class = "form-control" })
        </div>
    </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="text-align:left; margin-left:0px;">
                <input type="submit" style="width:141px; background-color: #4CAF50; color: black; font-weight:600; border: none; margin-bottom:20px;" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<style>
    .html, body{
        color:white;
    }
</style>